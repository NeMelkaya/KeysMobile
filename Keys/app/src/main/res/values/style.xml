<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:translationZ">2dp</item>
    </style>
    <style name="btn.blue">
        <item name="android:background">@drawable/rounded_btn_shape</item>
        <item name="backgroundTint">@color/blueDark</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="btn.transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="btn.transparent.12sp">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/blueDark</item>
    </style>

    <style name="item">
        <item name="android:background">@drawable/rounded_item_form</item>
    </style>



    <style name="headingText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="headingText.white">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="headingText.black">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="headingText.error">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="headingText.24sp">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="headingText.24sp.black">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="headingText.24sp.white">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="headingText.24sp.white.start">
        <item name="android:textAlignment">textStart</item>
    </style>



    <style name="fixText">
        <item name="android:background">@drawable/rounded_text_shape</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="editTextInputLayout">
        <item name="android:background">@drawable/edit_text_btn_shape</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">10sp</item>
    </style>
    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/edit_text_btn_shape</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blueDark</item>
    </style>



    <style name="chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">14sp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipBackgroundColor">@color/chip_data_color</item>
        <item name="chipStrokeColor">@color/chip_data_color</item>
        <item name="android:textColor">@color/chip_data_text_color</item>
    </style>

    <style name="chip.unavailable">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/white</item>
        <item name="android:textColor">@color/blue</item>
    </style>


    <style name="chip.12sp">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="chipStrokeColor">@color/chip_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
    </style>

    <style name="chip.12sp.unavailable">
        <item name="chipBackgroundColor">@color/blueLight</item>
        <item name="chipStrokeColor">@color/blueLight</item>
        <item name="android:textColor">@color/blue</item>
    </style>










</resources>